<%= javascript_include_tag "signature_pad" %>
<%= javascript_include_tag "signature_pad.min" %>

<div class="row">
  <div class="col-md-12">
    <div class="portlet box blue-steel">
      <div class="portlet-title">
        <div class="caption">
          <h3 style= "text-align:center;">Please sign in the box below</h3>
        </div>
      </div>

      <div id="signature-pad" class="m-signature-pad">
        <div class="m-signature-pad--body">
          <canvas width="270" height="350" style="width: 270px;350px;border:2px solid #000000;display: block;margin: 0 auto;">
          </canvas>
        </div>

        <div class="m-signature-pad--footer form-actions fluid">
          <div class="row">
            <div class="col-md-6">
              <div class="col-md-offset-3 col-md-9">
                <button class="button" data-action="clear">Clear</button >
                <button class="button" data-action="preview" >Preview</button>
                <button class="button" data-action="sign-pdf">Sign Pdf</button>
                <!-- <button class="button" data-action="sign-xls">Sign Xls</button> -->
              </div>
            </div>
            <div class="col-md-6">
            </div>
          </div>
        </div>
      </div>       
    </div>
  </div>
</div>

<%= form_tag(sign_document_path, id: 'form') do %>
  <%= hidden_field_tag "data_uri" %>
  <%= hidden_field_tag "doc_type" %>
<% end %>

<%= javascript_include_tag "signature" %>